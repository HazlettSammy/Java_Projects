import java.util.Scanner;

public class Main
{
    public static void main(String[] args)
    {
        Scanner scanner = new Scanner(System.in);

        // Prompt the user to input maintenance costs for each season
        System.out.println("Enter maintenance cost for Spring:");
        double springCost = scanner.nextDouble();

        System.out.println("Enter maintenance cost for Summer:");
        double summerCost = scanner.nextDouble();

        System.out.println("Enter maintenance cost for Autumn:");
        double autumnCost = scanner.nextDouble();

        System.out.println("Enter maintenance cost for Winter:");
        double winterCost = scanner.nextDouble();

        // Calculate total yearly maintenance cost
        double totalCost = springCost + summerCost + autumnCost + winterCost;

        // Display the total yearly maintenance cost
        System.out.println("Total Yearly Maintenance Cost:");
        System.out.println("Spring: $" + springCost);
        System.out.println("Summer: $" + summerCost);
        System.out.println("Autumn: $" + autumnCost);
        System.out.println("Winter: $" + winterCost);
        System.out.println("Total: $" + totalCost);

        scanner.close();
    }
}
